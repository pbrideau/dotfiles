[user]
  name = Patrick Brideau
  email = patrick.brideau@teluq.ca
[color]
  ui = true
[push]
  default = simple
[core]
  excludesfile = ~/.gitignore
  editor = vim
[init]
  templateDir = ~/.dotfiles/git/template
[pull]
  rebase = true
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
